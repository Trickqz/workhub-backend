generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  points   Point[]
  tasks    Task[]
}

model Point {
  id        Int      @id @default(autoincrement())
  userId    Int
  entry     DateTime
  exit      DateTime?
  breaks    Break[]
  user      User     @relation(fields: [userId], references: [id])
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      String
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model Break {
  id        Int      @id @default(autoincrement())
  pointId   Int
  start     DateTime
  end       DateTime
  point     Point    @relation(fields: [pointId], references: [id])
}